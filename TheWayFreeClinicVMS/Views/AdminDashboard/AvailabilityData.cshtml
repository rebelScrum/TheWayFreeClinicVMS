<script>
    function showAvail(id, day) {

        var elemID = day + id;

        var div = document.getElementById(elemID);

        switch (div.style.display) {
            case "":
                div.style.display = "none";
                break;
            case "none":
                div.style.display = "";
                break;
        }
    }
</script>