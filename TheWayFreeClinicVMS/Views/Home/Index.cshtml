@model TheWayFreeClinicVMS.Models.Worktime

@{
    ViewBag.Title = "Volunteer Management System";
}

<style>
    .box {
        background-color: #e5ffe5; 
        border-style:double; 
        border-color:white; 
        border-width:thick;
    }
    
    .box:hover{
        border-color:blue;
    }

</style>

<div class="container">
    <div class="row">

        <div class="col-md-4 jumbotron box">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center"><strong>Something Else</strong></h2>
                </div>
            </div>
        </div>

        <div class="col-md-4 jumbotron box">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center"><strong>Work Log</strong> <br>your volunteered time</h2>
                    <p>Simply type your Email and click Clock In button to record your hours. </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <div>
                                <input type="text" name="email" placeholder="Email" class="form-control" style="max-width:100%" ; />
                            </div>
                        </div>

                        <button type="submit" value="Clock In/Out" class="btn btn-info btn-lg" style="background-color:limegreen; width:100%;">Clock In/Out</button>                        

                    } <!-- end form-->
                </div>
            </div>
        </div>

        <div class="col-md-4 jumbotron box">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center"><strong>Recent Activity</strong></h2>
                </div>
            </div>
        </div>

    </div>
</div>


