@model IEnumerable<TheWayFreeClinicVMS.Models.Volunteer>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="col-md-12">
        <h2>Manage Volunteers</h2>
        <div>
        <form>
            <a href="@Url.Action("Create", "AdminDashboard")" class="btn btn-primary"><span class="glyphicon glyphicon glyphicon-plus" aria-hidden="true"></span> Add Volunteer</a>
        </form>
            <p></p>
        </div>
        <div>
            <table class="table table-condensed table-hover table-striped table">
                <tr>
                                       
                    <th>
                        @Html.DisplayNameFor(model => model.volLastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.volFirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Specialty.spcName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.volEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.volPhone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.volStartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.volActive)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
            {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.volLastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.volFirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Specialty.spcName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.volEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.volPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.volStartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.volActive)
                        </td>
                        <td>
                            @*Buttons for CRUD*@
                            <a href="@Url.Action("Edit", "AdminDashboard",new { id = item.volID })" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
                            <a href="@Url.Action("Details", "AdminDashboard",new { id = item.volID })" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span> Details</a>
                            <a href="@Url.Action("Delete", "AdminDashboard",new { id = item.volID })" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
