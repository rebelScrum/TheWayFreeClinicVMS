@{
    ViewBag.Title = "homeMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("textBoxAction", "Home"))
{
    <div class="panel panel-primary">
        <div class="panel-heading"><span style="font-size:x-large;">Create New Message from Admin</span></div>
        <div class="panel-body">
            <div class="form-group">
                <div>
                    <textarea name="message" placeholder="Message" class="form-control" style="min-width:100%;"></textarea>
                    @*<input type="text" name="message" placeholder="Message" class="form-control" style="max-width:100%" ; />*@
                    <button id="submit" type="submit" value="Submit" class="btn btn-info btn-lg" style="background-color:limegreen; margin-top:20px; float:right;">Submit</button>
                    @Html.AntiForgeryToken()
                </div>
            </div>
        </div>
    </div>
}


@using (Html.BeginForm("modifyMessage", "Home"))
{
    <div class="panel panel-primary">
        <div class="panel-heading"><span style="font-size:x-large;">Change or Delete Message</span></div>
        <div class="panel-body">
            <div class="form-group">
                <div>
                    <table class="table table-condensed table-hover">
                        <tr style="font-size:large;">
                            <th>
                                Messages
                            </th>
                            <th>
                                Preview
                            </th>
                            <th>
                                
                            </th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.fileName
                                </td>
                                <td>
                                    @item.preview
                                    <span id="@item.fileName" hidden>@item.fullText</span>
                                </td>
                                <td style="text-align:right;">
                                    <a href="#" name="@item.fileName" value="@item.fullText" onclick="return fillTextArea(this.name)" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span> Edit</a>
                                    <a href="#" name="@item.fileName" onclick="return deleteMessage(this.name)" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Delete</a>
                                </td>
                            </tr>
                        }
                    </table>
                    <textarea id='modifyMessage' class="form-control" style="min-width:100%;"></textarea>
                    <button id="submit" type="submit" value="Submit" class="btn btn-info btn-lg" style="background-color:limegreen; margin-top:20px; float:right;">Submit</button>
                    @Html.AntiForgeryToken()
                </div>
            </div>
        </div>
    </div>
}


@using (Html.BeginForm("homeMessage", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="panel panel-primary">
        <div class="panel-heading"><span style="font-size:x-large;">Change Home Page Image</span></div>
        <div class="panel-body">
            <div class="">
                <input type="file" name="file" />
                <input type="submit" value="Submit" class="btn btn-info btn-lg" style="background-color:limegreen; margin-top:20px; float:right;" />
                @Html.AntiForgeryToken()
            </div>
        </div>
    </div>    
}

<script>
    function fillTextArea(fileName)
    {
        document.getElementById('modifyMessage').value = document.getElementById(fileName).innerHTML;
        document.getElementById('modifyMessage').style.height = document.getElementById('modifyMessage').scrollHeight + 'px';
    }
</script>