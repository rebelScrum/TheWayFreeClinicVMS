            <div class="tab-content jumbotron" style="padding:20px;">

                <div id="mon" class="tab-pane fade in active">
                    @foreach (var vol in Model)
                    {

                        var avail = false;

                        foreach (var av in vol.availabilities)
                        {
                            if ((int)av.avDay == 0)
                            {
                                avail = true;
                            }
                        }

                        if (avail == true)
                        {
                            <div class="container-fluid">

                                <div onclick="showAvail(@vol.volunteer.volID, 'mon')" class="btn btn-xs btn-primary btn-group-justified" style="margin-bottom:15px;">
                                    <div class="row" style="border-style:solid; border-color:#337ab7; border-width:1px; margin:5px; background-color:#337ab7;">
                                        <div class="col-md-2">
                                            <div style="color:white;">@vol.volunteer.volLastName, @vol.volunteer.volFirstName</div>
                                        </div>
                                        <div class="col-md-10">
                                            @for (var h = 5; h <= 16; h++)
                                            {
                                                <div class="col-md-1" style="background-color:#6cb8fa; color:white; text-align:center; border-width:1px; border-color:#eeeeee; border-style:solid;">
                                                    @foreach (var av in vol.availabilities)
                                                    {
                                                        if ((int)av.avDay == 0)
                                                        {
                                                            if (h >= av.avFrom.Hour && h <= av.avUntil.Hour)
                                                            {
                                                                @h<span>:00</span>
                                                            }
                                                        }
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div id="@("mon" + vol.volunteer.volID)" style="display:none;">
                                    @{Html.RenderAction("VolunteerAvailable", new { id = vol.volunteer.volID }); }
                                </div>
                            </div>
                                            }

                                        }
