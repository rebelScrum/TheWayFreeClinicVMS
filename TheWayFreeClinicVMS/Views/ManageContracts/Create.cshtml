@model TheWayFreeClinicVMS.Models.Contract

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Contract</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.volID)
        <div class="form-group">
            @Html.LabelFor(model => model.ctrNum, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ctrNum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ctrNum, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.pgrID, "PA Group Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("pgrID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.pgrID, "", new { @class = "text-danger" })

            </div>
            @*<a href=@Url.Action("CreateGroup", "ManageContracts") class="btn btn-success btn-sm">Add PA Group</a>*@
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                @if (this.User.IsInRole("Admin"))
                {
                <a href=@Url.Action("CreateGroup", "ManageContracts") class="btn btn-primary">Add New PA Group</a>
                }
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index", "ManageContracts", new { id = Model.volID })" class="btn btn-info">Back to List</a>
</div>
