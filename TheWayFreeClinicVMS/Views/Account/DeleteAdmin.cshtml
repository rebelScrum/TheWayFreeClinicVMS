@model TheWayFreeClinicVMS.Models.ApplicationUser

@{
    ViewBag.Title = "DeleteAdmin";
}

<h2>Delete Administrator</h2>

<h3>Are you sure you want to delete this administrator?</h3>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            Name: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Volunteer.volLastName),@Html.DisplayFor(model => model.Volunteer.volFirstName)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Volunteer.volEmail)
        </dd>

       

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="hidden" id="id" value="@Html.DisplayFor(model => model.Id)" />
            <input type="submit" value="Delete" class="btn btn-danger" /> 
        </div>
    }
    <a href="@Url.Action("ManageAdmins", "AdminDashboard")" class="btn btn-info btn-sm"> Back to List</a>
</div>
